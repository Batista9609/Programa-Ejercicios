        static Double Gasto_calorico(Double pesoL, Double alturaL, Int32 edadL, String intensidadL, String SexoL)
        {
            Double Gastocal;
            if (intensidadL == "Baja")
            {
                if (SexoL == "femenino")
                {

                    Gastocal = ((655 + (9.6 * pesoL) + (1.8 * alturaL) - (4.7 * edadL))) * 1.3;
                    return Gastocal;
                }
                else
                {
                    Gastocal = ((66 + (13.7 * pesoL) + (5 * alturaL) - (6.75 * edadL))) * 1.3;
                    return Gastocal;
                }
            }

            if (intensidadL == "Media")
            {
                if (SexoL == "femenino")
                {

                    Gastocal = ((655 + (9.6 * pesoL) + (1.8 * alturaL) - (4.7 * edadL))) * 1.4;
                    return Gastocal;
                }
                else
                {
                    Gastocal = ((66 + (13.7 * pesoL) + (5 * alturaL) - (6.75 * edadL))) * 1.4;
                    return Gastocal;
                }
            }

            // Intensidad Alta
            {
                if (SexoL == "femenino")
                {

                    Gastocal = ((655 + (9.6 * pesoL) + (1.8 * alturaL) - (4.7 * edadL))) * 1.5;
                    return Gastocal;
                }
                else
                {
                    Gastocal = ((66 + (13.7 * pesoL) + (5 * alturaL) - (6.75 * edadL))) * 1.5;
                    return Gastocal;
                }
            }
        }

        static Double ConsumoAumento(Double pesoL, Double alturaL, Int32 edadL, String intensidadL, String SexoL)
        {
            Double consumo;

            if (SexoL == "femenino")
            {
                Gasto_calorico(pesoL, alturaL, edadL, intensidadL, SexoL);

                if (intensidadL == "Baja")
                {
                    consumo = ((Gasto_calorico(pesoL, alturaL, edadL, intensidadL, SexoL) / 100) * 10);
                    return consumo;
                }
                if (intensidadL == "Media")
                {
                    consumo = ((Gasto_calorico(pesoL, alturaL, edadL, intensidadL, SexoL) / 100) * 12);
                    return consumo;
                }
                //Intensidad == Alta
                {
                    consumo = ((Gasto_calorico(pesoL, alturaL, edadL, intensidadL, SexoL) / 100) * 15);
                    return consumo;
                }
            }

            else
            {
                Gasto_calorico(pesoL, alturaL, edadL, intensidadL, SexoL);

                if (intensidadL == "Baja")
                {
                    consumo = ((Gasto_calorico(pesoL, alturaL, edadL, intensidadL, SexoL) / 100) * 15);
                    return consumo;
                }
                if (intensidadL == "Media")
                {
                    consumo = ((Gasto_calorico(pesoL, alturaL, edadL, intensidadL, SexoL) / 100) * 17);
                    return consumo;
                }
                // Intensidad == Alta
                {
                    consumo = (Gasto_calorico(pesoL, alturaL, edadL, intensidadL, SexoL) * 20);
                    return consumo;
                }
            }
        }

